	}else if(dataType=="month"){
		url = "dataStaticstics/getStatsMonthAll";
	}else if(dataType=="all"){
		url = "dataStaticstics/getStatsAll";
	}else{
		return;
	}
	$.ajax({
		//async : false,
		cache : false,
		type : 'POST',
