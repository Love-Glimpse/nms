	<script>
		var date = getNowFormatDate();
		var dates = null;
		var statistic = 0;
		layui.use('form', function() {
			var form = layui.form;
			form.on("select(aihao)", function(data) {
			});
		});
		layui.use('laydate', function() {
			var laydate = layui.laydate;
			//执行一个laydate实例
			laydate.render({
				elem : '#date',
				value : getNowFormatDate(),
				min : '2018-08-10',
				max : getNowFormatDate(),
				done : function(value, date, endDate) {
					date = value;
					dates = 'null';
					load(date, dates);
				}
			});
			laydate.render({
				elem : '#dates',
				max : getNowFormatDate(),
				range : '--' //或 range: '~' 来自定义分割字符
				,
				done : function(value, date, endDate) {
					dates = value;
					date = 'null';
					load(date, dates);
				}
			});

		});

		function load(date, dates) {
			layui.use('table', function() {
				var table = layui.table;
				table.render({
					elem : '#demo',
					url : '/nms/userLoginLog',
					where : {
						date : date,
						dates : dates
					},
					cols : [ [ {
						field : 'userId',
						width : 80,
						title : 'ID'
					}, {
						field : 'mail',
						width : 160,
						title : '邮箱'
					}, {
						field : 'ip',
						width : 160,
						title : 'IP'
					}, {
						field : 'browser',
						width : 200,
						title : '浏览器'
					}, {
						field : 'osName',
						title : '操作系统名称',
						width : 160,
					}, {
						field : 'loginTime',
						width : 180,
						title : '登陆时间'
					}, {
						field : 'readTime',
						width : 90,
						title : '阅读时长'
					}, {
						field : 'onlineTime',
						width : 90,
						title : '在线时长'
					} ] ],
					page : true,
					even : true
				});
			});
		}

		layui.use('slider', function() {
			var slider = layui.slider;

			//渲染
			slider.render({
				elem : '#slideTest1' //绑定元素
			});
		});

