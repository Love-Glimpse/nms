body {
    font-size: 14px;
}
.page-content {
    background-color: #fff;
    position: relative;
    margin: 0;
    padding: 8px 20px 24px;
}
.btn, .input-group .input-group-btn .btn {
    border-width: 1px;
}

.frontend-template .template-preview {
    width: 100%;
    border: 1px solid #eee;
}
.btn-secondary, .btn-secondary:focus {
    background-color: #428bca!important;
    border-color: #428bca;
}

.btn-default{
    background-color: #428bca!important;
    border-color: #428bca;
}
.btn-default:hover{
    background-color: #0d5fa7!important;
    border-color: #0d5fa7;
}
.btn-color{
    background-color: #428bca!important;
    border-color: #428bca;
}
.btn-color:hover{
    background-color: #0d5fa7!important;
    border-color: #0d5fa7;
}
.td-middle{

}
.table .referral-link-item td{
    vertical-align: middle;
}

.btn-group .dropdown-toggle:active{
    border-color: #428bca;
}
.actions-bar .btn-group .dropdown-toggle:focus{
    border-color: #428bca;
}
.actions-bar{
    padding: 12px 0;
}

.referral-link-item{
    color: #444;
    font-size: 17px;
}

.btn-group .btn .caret {
    margin-top: 0px;
    margin-left: 1px;
    border-width: 5px;
    border-top-color: #FFF;
}
.export{
    cursor: pointer;
}


.page-content .nav-tabs .active a{
    color: #576373;
    border-color: #c5d0dc #c5d0dc transparent;
    border-top: 2px solid #4c8fbd;
    background-color: #FFF;
    z-index: 1;
    line-height: 18px;
    margin-top: -1px;
    box-shadow: 0 -2px 3px 0 rgba(0,0,0,.15);
}

.active1{
    display: block;
}
.active2{
    display: none;
}