			{
				field : 'ck',
				checkbox : true,
				align : 'center'
			},
			{
				field : 'created_time',
				title : '下单时间',
				width : 100,
				align : 'center'
			},
			{
				field : 'user_id',
				title : '用户ID',
				width : 40,
				align : 'center',
				hidden:true
			},
			{
				field : 'partner_name',
				title : '客户渠道',
				width : 50,
				align : 'center'
			},
			{
				field : 'nick_name',
				title : '用户呢称',
				width : 50,
				align : 'center'
			},
			{
				field : 'channel_name',
				title : '充值渠道',
				width : 50,
				align : 'center'
			},
			{
				field : 'order_id',
				title : '订单流水号',
