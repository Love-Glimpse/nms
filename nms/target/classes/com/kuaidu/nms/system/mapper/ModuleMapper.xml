<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 
	namespace：必须与对应的接口全类名一致
	id:必须与对应接口的某个对应的方法名一致
	
 -->
<mapper namespace="com.kuaidu.nms.system.mapper.ModuleMapper">

 <select id="getAll_module" resultType="Sys_module">
   select * from sys_module ORDER BY parent_id ,show_order
 </select>
 <insert id="save">
   INSERT into sys_module(module_name,parent_id,module_url,show_order) VALUES(#{module_name},#{parent_id},#{module_url},#{show_order})
 </insert>
 <delete id="del_module">
   delete from sys_module where module_id=#{module_id}
 </delete>
  <delete id="delson_module">
   delete from sys_module where parent_id=#{parent_id}
 </delete>
 <update id="update_module">
   UPDATE sys_module SET module_name =#{module_name},parent_id=#{parent_id},module_url=#{module_url},show_order=#{show_order} where module_id=#{module_id}
 </update>
</mapper>